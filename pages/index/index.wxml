<!--index.wxml-->
<swiper
 indicator-dots="{{indicatorDots}}"
 indicator-color="white"
 indicator-active-color="#00eb00"
 autoplay="{{autoplay}}"
 interval="{{interval}}"
 duration="{{duration}}"
 circular="true"
 style="height: {{swiperHeight}}px"
>
	<block wx:for="{{bannerList}}" wx:key="{{imgUrls}}">
		<swiper-item>
			<image src="{{item.image.url}}" class="slide-image" mode="scaleToFill" bindtap="tapDetail" data-id="{{item.id}}"/>
		</swiper-item>
	</block>
</swiper>
<view class="event-container">
	<block wx:for="{{eventList}}" wx:for-item="item" wx:key="item.id">
		<event-item data="{{item}}" />
	</block>
</view>

