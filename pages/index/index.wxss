/**index.wxss**/
.slide-image {
  width : 100%;
  height: 100%;
}

.event-container {
  padding: 0 40rpx 40rpx 40rpx;
}

.news-container {
  padding: 40rpx;
}

.news-top {
  display        : flex;
  flex-direction : row;
  justify-content: space-between;
  margin-bottom  : 20rpx;
}

.banner-con {
  color     : white;
  width     : 400rpx;
  top       : 60rpx;
  right     : 20rpx;
  background: rgba(0, 0, 0, 0.6);
  padding   : 20rpx;
}

.banner-more {
  color     : white;
  background: #ffa800;
  display   : inline-block;
  padding   : 10rpx 5rpx;
  margin-top: 10rpx;
  font-size : 12px;
}

.home-top {
  display       : flex;
  flex-direction: column;
  padding       : 0 40rpx;
}

.home-nav {
  display        : flex;
  flex-direction : row;
  justify-content: space-between;
  align-items    : center;
  height         : 80rpx;
}