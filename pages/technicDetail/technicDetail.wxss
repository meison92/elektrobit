/* pages/technicDetail/technicDetail.wxss */
.tech-detail video {
    width:100%;

}
.tech-detail .tech-container{
    padding: 40rpx;
}

.icon-span {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.icon-span view{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 10rpx;
}

.comment {
    height: 70rpx;
    line-height: 70rpx;
    background: rgb(234, 234, 234);
    padding-left: 20rpx;
    border-radius: 5rpx;
}

.comment-item .comment-top image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.comment-item {
    margin-top: 40rpx;
}

.comment-item .comment-top .name{
    display:inline-block;
    margin-left: 10rpx;
    margin-bottom: 10rpx;
}

.comment-item .comment-top .time {
    float: right;
    margin-top: 12rpx;
}

.comment-item .comment-bottom {
    margin-top: 20rpx;
    padding-left: 70rpx;
}