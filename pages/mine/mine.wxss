/* pages/mine/mine.wxss */
.mine-container {
    padding-left:40rpx;
    padding-right:40rpx;
    margin-top: 100rpx;
}
.input-span {
    display:flex;
    flex-direction:row;
    align-items:center;
    height: 70rpx;
    margin-bottom: 20rpx;
    background: #eeeeee;
    border-radius: 6rpx;
}
.input-icon {
    width: 40rpx;
    height:40rpx;
    margin-left:40rpx;
    margin-right:40rpx;
}

.input-span text{
    color:#3f3f3f;
    font-size: 28rpx;
}

.submit-btn {
    width:320rpx;
    height:60rpx;
    background: #F19827;
    border-radius: 30rpx;
    color:white;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-span{
    margin-top: 40rpx;
    display: flex;
    justify-content: center;
}
.avatar-span{
    display: flex;
    position: relative;
    justify-content: center;
}
.avatar {
    width:144rpx;
    height: 144rpx;
    border-radius: 72rpx;
    position: absolute;
    background: red;
    bottom: -60rpx;
}


.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
  }
  
  .modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 36rpx;
  }
  
  .modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
  }
  
  .modal-content {
    padding: 50rpx 32rpx;
  }
  
  .modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
  }
  
  
  .input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
  }
  
  input-holder {
    color: #666;
    font-size: 28rpx;
  }
  
  .modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
  }
  
  .btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
  }
  
  .btn-confirm {
    width: 50%;
    color: #ec5300;
    text-align: center;
  }