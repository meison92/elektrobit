@import "../../app.wxss";


.news-item {
    box-sizing    : border-box;
    margin-bottom : 40rpx;
    overflow      : hidden;
    display       : flex;
    flex-direction: row;
    padding       : 20rpx;
    height        : 160rpx;
    overflow      : hidden;
    border        : 1rpx solid lightgray;
}

.news-item .date {
    width       : 80rpx;
    border-right: 1rpx solid lightgray;
}

.news-item .content {
    -webkit-box-orient   : vertical;
    -webkit-line-clamp   : 2;
    overflow             : hidden;
    display              : flex;
    flex                 : 1;
    padding-left         : 20rpx;
}