@import "../../app.wxss";

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    overflow: hidden;
    z-index: 9000;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .modal-dialog {
    width: 680rpx;
    height: 960rpx;
    background: white;
    display:flex;
    flex-direction:column;
    align-items:center;
  }

  .modal-dialog image{
    width: 100%;
    height: 180rpx;
  }
  
  .modal-title {
    padding-top: 50rpx;
    margin-bottom: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
  }
  
  .modal-content {
    padding: 50rpx 32rpx;
  }
  
  .modal-input {
    width: 540rpx;
    height:60rpx;
    border: 2rpx solid grey;
    border-radius: 10rpx;
    font-size: 28rpx;
    margin-bottom: 10rpx;
    color:black;
    padding-left: 20rpx;
  }
  
  .input-holder {
    color: #666;
    font-size: 28rpx;
    padding-left: 20rpx;
  }
  
  .modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
  }

  .btn-group{
      display: flex;
      flex-direction: row;
  }
  
  .btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
  }
  
  .btn-confirm {
    width: 50%;
    color: #ec5300;
    text-align: center;
  }